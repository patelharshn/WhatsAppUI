        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="90dp"
        android:layout_weight="1"
        android:background="@drawable/chat_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/Img_Add_Chat"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="12dp"
            app:srcCompat="@drawable/baseline_add_a_photo_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:background="@color/seondry"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/btnChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="#AEF2A1"
            android:drawableTop="@drawable/baseline_chat_24"
            android:text="Chats"
            android:layout_weight="1"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="#AEF2A1"
            android:drawableTop="@drawable/whatsapp_status"
            android:text="Status"
            android:layout_weight="1"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="#AEF2A1"
            android:drawableTop="@drawable/baseline_person_24"
            android:text="Profile"
            android:layout_weight="1"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#AEF2A1"
            android:drawableTop="@drawable/baseline_call_24"
            android:text="Calls"
            android:layout_weight="1"
            android:textColor="@color/black" />
